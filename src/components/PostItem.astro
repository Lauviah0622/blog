---
import TagsList from '~/components/TagsList.astro'
import DateTimeCount from '~/components/DateTimeCount.astro'

const { post, showTags = true } = Astro.props

const { title, pubDate, tags, summary, minutesRead } = post.frontmatter
---

<style>
  li {
    position: relative;
    list-style-type: none;
    box-sizing: border-box;
    margin-top: 60px;

    &:not(:last-of-type)::after {
      content: '';
      display: block;
      margin: 60px auto 0;
      background-color: var(--color-primary-transparent);
      border-radius: 5px;
      border: 0.5px solid var(--color-primary-transparent);
      width: 98%;
    }
  }

  h2 {
    padding: 0;

    & a {
      color: var(--color-text);
    }
  }

  :global(.tags) {
    margin-bottom: 15px;
    margin-bottom: 0.5em;

    & a:not(:last-of-type) {
      margin-right: 0.5ch;
    }
  }

  :global(.time) {
    font-size: 0.8em;
    margin: 0.3em 0 1em 0;
    color: var(--color-text-primary);
  }

  .summary {
    /* color: var(--color-text-secondary); */
    margin: 0;
    padding-top: 20px;
    font-size: 0.8em;
    font-weight: normal;
  }
</style>

<li class="postItem">
  <article>
    {showTags && <TagsList tags={tags} />}
    <h2>
      <a href={post.url}>
        {title}
      </a>
    </h2>
    <DateTimeCount date={pubDate} minutesRead={minutesRead} />
    {summary && <p class="summary">{summary}</p>}
  </article>
</li>
