---
import Toc from '~/components/Toc/Toc.jsx'
import '~/components/Toc/Toc.css'

const { headings } = Astro.props

const COMMENTS = { depth: 2, slug: 'comments', text: '#Comments' }
---

<aside>
  {
    headings && (
      <Toc
        client:media="(min-width: 80em)"
        headings={[...headings, COMMENTS]}
      />
    )
  }
</aside>

<style>
  :global(aside) {
    position: fixed;
    right: 0;
    z-index: 99;
    @media screen and (max-width: 80rem) {
      display: none;
    }
  }
</style>
