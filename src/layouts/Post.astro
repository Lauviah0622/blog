---
import Base from './Base.astro';
import DateTimeCount from '~/components/DateTimeCount.astro';


import TagsList from '~/components/TagsList.astro';
import Toc from '~/components/Toc/Toc.astro'

const url = new URL(Astro.url.pathname, Astro.site);
const { content, headings } = Astro.props;

const props = Astro.props

---

<Base className="align-left" title={content.title} description={content.description} permalink={url.href}>
<aside>
  {headings &&
  <Toc headings={headings} />}
</aside>
<div class="heading">
  <TagsList tags={content.tags} />
  <h1 class="title">{content.title}</h1>
  <DateTimeCount date={content.pubDate} minutesRead={content.minutesRead} />
</div>
{content.cover &&
<div class="cover">
  <img src={content.cover} />
</div>
}
